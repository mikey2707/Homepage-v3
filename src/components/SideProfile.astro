---
interface Props {
  name: string;
  title: string;
  email: string;
  phone?: string;
  profileImage?: string;
  availableForWork?: boolean;
  cvDownloadLink?: string;
}

const { name, title, email, phone, profileImage, availableForWork = false, cvDownloadLink } = Astro.props;
---

<aside class="hidden lg:block w-full max-w-sm">
  <div class="rounded-lg border p-8 shadow-xl transition-colors duration-200" style="background-color: var(--theme-card); border-color: var(--theme-border);">
    <div class="flex flex-col items-center text-center">
      <!-- Profile Image -->
      <div class="relative mb-6">
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-primary-500 to-primary-700 p-1">
          <div class="w-full h-full rounded-full bg-gray-800 dark:bg-gray-100 flex items-center justify-center overflow-hidden">
            {profileImage ? (
              <img src={profileImage} alt={name} class="w-full h-full object-cover" />
            ) : (
              <span class="text-4xl text-primary-400 dark:text-primary-600 font-bold">{name.charAt(0)}</span>
            )}
          </div>
        </div>
        {availableForWork && (
          <div class="absolute -bottom-1 left-1/2 transform -translate-x-1/2 bg-green-500 dark:bg-green-600 text-white text-xs font-semibold px-3 py-1 rounded-full whitespace-nowrap">
            Available for work
          </div>
        )}
      </div>

      <!-- Name and Title -->
      <h1 class="text-2xl font-bold mb-2 bg-clip-text text-transparent" style="background-image: linear-gradient(to right, var(--theme-primary), var(--theme-primary-hover)); -webkit-background-clip: text;">
        {name}
      </h1>
      <p class="mb-8 text-sm opacity-70" style="color: var(--theme-text);">{title}</p>

      <!-- Contact Info -->
      <div class="w-full space-y-4 mb-6">
        <a
          href={`mailto:${email}`}
          class="flex items-center gap-3 transition-colors group"
          style="color: var(--theme-text);"
        >
          <div class="w-10 h-10 rounded-lg flex items-center justify-center transition-colors flex-shrink-0 opacity-70 group-hover:opacity-100" style="background-color: var(--theme-bg);">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <span class="text-sm break-all">{email}</span>
        </a>
        
        {phone && (
          <a
            href={`tel:${phone}`}
            class="flex items-center gap-3 transition-colors group"
            style="color: var(--theme-text);"
          >
            <div class="w-10 h-10 rounded-lg flex items-center justify-center transition-colors flex-shrink-0 opacity-70 group-hover:opacity-100" style="background-color: var(--theme-bg);">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <span class="text-sm">{phone}</span>
          </a>
        )}
      </div>

      <!-- Download CV Button -->
      {cvDownloadLink && (
        <a
          href={cvDownloadLink}
          download
          class="w-full text-white font-medium py-3 px-6 rounded-lg transition-colors inline-flex items-center justify-center gap-2"
          style="background-color: var(--theme-primary-bg);"
          onmouseover="this.style.backgroundColor = 'var(--theme-primary-hover)'"
          onmouseout="this.style.backgroundColor = 'var(--theme-primary-bg)'"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download CV
        </a>
      )}
    </div>
  </div>
</aside>

