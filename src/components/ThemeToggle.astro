<button
  id="theme-toggle"
  class="fixed top-4 right-4 z-50 p-3 bg-gray-800 dark:bg-gray-200 rounded-lg border border-gray-700 dark:border-gray-300 shadow-lg hover:bg-gray-700 dark:hover:bg-gray-300 transition-colors"
  aria-label="Toggle theme"
>
  <!-- Sun icon (light mode) -->
  <svg
    id="sun-icon"
    class="w-5 h-5 text-yellow-500 hidden dark:block"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
  <!-- Moon icon (dark mode) -->
  <svg
    id="moon-icon"
    class="w-5 h-5 text-gray-300 dark:hidden block"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
</button>

<script>
  (function () {
    // Get theme from localStorage or default to dark
    const getTheme = () => {
      if (typeof window !== 'undefined') {
        const stored = localStorage.getItem('theme');
        if (stored) return stored;
        // Check system preference
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }
      return 'dark';
    };

    // Set theme
    const setTheme = (theme: string) => {
      if (typeof document !== 'undefined') {
        const root = document.documentElement;
        if (theme === 'dark') {
          root.classList.add('dark');
        } else {
          root.classList.remove('dark');
        }
        if (typeof window !== 'undefined') {
          localStorage.setItem('theme', theme);
        }
      }
    };

    // Initialize theme on load
    if (typeof document !== 'undefined') {
      const theme = getTheme();
      setTheme(theme);

      // Theme toggle button
      const toggleButton = document.getElementById('theme-toggle');
      if (toggleButton) {
        toggleButton.addEventListener('click', () => {
          const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
          const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
          setTheme(newTheme);
        });
      }
    }
  })();
</script>

