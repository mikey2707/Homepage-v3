---
interface Project {
  name: string;
  description: string;
  tech: string[];
  link?: string;
  image?: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="py-20">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="fade-in-section fade-in-up text-3xl md:text-4xl font-semibold mb-4 tracking-tight" style="color: var(--theme-primary);">
      Projects & Home Lab
    </h2>
    <p class="fade-in-section fade-in-up stagger-1 mb-12 text-lg" style="color: var(--theme-text); opacity: 0.7;">
      Self-hosted services and personal projects I've built and maintain
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, index) => (
        <div
          class={`fade-in-section fade-in-scale stagger-${Math.min(Math.floor(index / 2) + 1, 6)} group rounded-2xl overflow-hidden transition-all duration-300 glass glass-hover hover:scale-[1.02]`}
        >
          <!-- Project Header -->
          <div class="p-6 pb-4">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-semibold tracking-tight" style="color: var(--theme-text);">
                {project.name}
              </h3>
              {project.link && (
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-2 rounded-lg transition-colors hover:bg-opacity-50"
                  style="background-color: var(--theme-bg);"
                  aria-label={`View ${project.name}`}
                >
                  <svg class="w-4 h-4" style="color: var(--theme-text);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              )}
            </div>
            <p class="text-sm leading-relaxed mb-4" style="color: var(--theme-text); opacity: 0.75;">
              {project.description}
            </p>
          </div>

          <!-- Tech Stack -->
          <div class="px-6 pb-6">
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span
                  class="px-3 py-1 rounded-full text-xs font-medium transition-colors"
                  style="background-color: var(--theme-primary-bg); color: var(--theme-primary);"
                >
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Hover Effect Line -->
          <div
            class="h-1 w-0 group-hover:w-full transition-all duration-500"
            style="background: linear-gradient(to right, var(--theme-primary), var(--theme-primary-hover));"
          />
        </div>
      ))}
    </div>
  </div>
</section>
