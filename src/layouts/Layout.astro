---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Mikey's Home Page" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen transition-colors duration-200" style="background-color: var(--theme-bg); color: var(--theme-text);">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    scroll-behavior: smooth;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  /* Smooth scroll with offset for fixed navigation */
  html {
    scroll-padding-top: 5rem;
  }

  /* Enhanced scroll animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Base fade-in section class */
  .fade-in-section {
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity, transform;
  }

  /* Animation variants - initial states */
  .fade-in-section.fade-in-up {
    transform: translateY(50px);
  }

  .fade-in-section.fade-in-left {
    transform: translateX(-50px);
  }

  .fade-in-section.fade-in-right {
    transform: translateX(50px);
  }

  .fade-in-section.fade-in-scale {
    transform: scale(0.9);
  }

  /* Visible state - triggers animation */
  .fade-in-section.visible {
    opacity: 1;
    transform: translateY(0) translateX(0) scale(1) !important;
  }

  /* Smooth transitions for page sections */
  section {
    transition: opacity 0.6s ease-in-out, transform 0.6s ease-in-out;
  }

  /* Stagger animation delay utility */
  .stagger-1 { transition-delay: 0.1s; }
  .stagger-2 { transition-delay: 0.2s; }
  .stagger-3 { transition-delay: 0.3s; }
  .stagger-4 { transition-delay: 0.4s; }
  .stagger-5 { transition-delay: 0.5s; }
  .stagger-6 { transition-delay: 0.6s; }

  /* Glass morphism utilities */
  .glass {
    background: var(--theme-card-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--theme-border-glass);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  .glass-hover {
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .glass-hover:hover {
    box-shadow: 0 12px 40px var(--theme-glow), 0 0 0 1px var(--theme-border-glass);
    transform: translateY(-2px);
  }

  /* Shimmer loading animation */
  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  .shimmer {
    background: linear-gradient(
      90deg,
      var(--theme-card-glass) 25%,
      var(--theme-border-glass) 50%,
      var(--theme-card-glass) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  /* Pulsing status dot */
  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .pulse-dot {
    animation: pulse-dot 2s ease-in-out infinite;
  }

  /* Typewriter cursor animation */
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  #typewriter-text + span {
    animation: blink 1s infinite;
    margin-left: 2px;
  }

  /* Timeline Animations - Smooth scroll-based reveal */
  .timeline-line {
    opacity: 0.3;
    transition: opacity 0.8s ease-out;
    transform-origin: top;
  }

  .timeline-line.active {
    opacity: 1;
  }
</style>

